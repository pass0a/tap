{
	"name": "@passoa/tap",
	"version": "1.0.2",
	"description": "",
	"main": "index.js",
	"repository": "git+https://github.com/pass0a/tap.git",
	"scripts": {
		"nyc_out": "rimraf .nyc_output && mkdirp .nyc_output",
		"pretest": "npm run nyc_out && nyc instrument test dist/test && nyc instrument src dist/src && tsc",
		"test": "tape dist/test/*.test.js | tap-xunit > dist/TEST-tap.xml",
		"posttest": "nyc report --reporter=text --reporter=html && ncp dist/src/index.js index.js"
	},
	"author": "losper",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/pass0a/tap/issues"
	},
	"homepage": "https://github.com/pass0a/tap#readme",
	"dependencies": {
		"mkdirp": "^0.5.1",
		"nyc": "^14.1.1",
		"tape": "^4.11.0"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.0.10",
		"@types/tape": "^4.2.33",
		"ncp": "^2.0.0",
		"rimraf": "^2.6.3",
		"tap-xunit": "^2.4.1",
		"typescript": "^3.5.2"
	},
	"nyc": {
		"extension": [ ".ts", ".js" ],
		"exclude": [ "**/*.d.ts" ]
	},
	"bin": {
		"@passoa/tap": "./bin/tap.js"
	}
}
